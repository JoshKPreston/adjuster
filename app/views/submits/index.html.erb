<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<br />

<%= link_to "Submit Assignment", new_submit_path, class: "btn btn-primary" %>
<br />
<br />

<table class = "table table-bordered table-striped">
   <thead>
      <tr>
         <th>Name</th>
         <th>Download Link</th>
         <th> </th>
      </tr>
   </thead>
   
   <tbody>
      <% @submits.each do |submit| %>
         
         <tr>
            <td><%= submit.name %></td>
            <td><%= link_to "Download Assignment", submit.attachment_url %></td>
            <td><%= button_to "Delete",  submit, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{submit.name}?" %></td>
         </tr>
         
      <% end %>
   </tbody>
   
</table>